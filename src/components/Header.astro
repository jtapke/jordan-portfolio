---
interface Props {
  currentPage?: string;
}

const { currentPage } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-bg-primary/90 backdrop-blur-sm border-b border-border/50">
  <nav class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo / Name -->
    <a href="/" class="nav-link font-bold text-text-primary hover:text-accent transition-colors tracking-widest">
      Jordan Tapke
    </a>

    <!-- Desktop Nav -->
    <div class="hidden md:flex items-center gap-8">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'nav-link transition-colors',
            currentPage === link.href
              ? 'text-accent'
              : 'text-text-secondary hover:text-text-primary',
          ]}
        >
          {link.label}
        </a>
      ))}
      <a
        href="https://www.linkedin.com/in/jtapke/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-text-secondary hover:text-accent transition-colors"
        aria-label="LinkedIn profile"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>
    </div>

    <!-- Mobile Hamburger -->
    <button
      id="mobile-menu-btn"
      class="md:hidden text-text-primary p-2"
      aria-label="Toggle navigation menu"
      aria-expanded="false"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path id="hamburger-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border/50 bg-bg-primary">
    <div class="px-6 py-6 flex flex-col gap-4">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'nav-link text-lg transition-colors',
            currentPage === link.href
              ? 'text-accent'
              : 'text-text-secondary hover:text-text-primary',
          ]}
        >
          {link.label}
        </a>
      ))}
      <a
        href="https://www.linkedin.com/in/jtapke/"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-link text-lg text-text-secondary hover:text-accent transition-colors"
      >
        LinkedIn
      </a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    btn.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
